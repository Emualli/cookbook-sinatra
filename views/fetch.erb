<h1>Liste des recettes</h1>

<% @recipes_from_marmiton.each_with_index do |r, index| %>
<%="#{index + 1}"%> - <strong><%= " #{r.name}" %></strong><span style="display:inline-block; margin: 0px 5px;"><img src="http://images.marmitoncdn.org/skins/1/globalsearch/images/time_icon.png" style="height:15px" /><%= "#{r.preparation_time} min"%></span><span style="display:inline-block; margin: 0px 5px;"><img src="http://images.marmitoncdn.org/skins/1/globalsearch/images/cooking_time_icon.png" style="height:15px"/><%= " #{r.cooking_time} min"%></span>

<form action="/marmiton/add-recipe" method="post" style="display:inline-block; float:right;">
  <input name="link" type="hidden" value=<%="#{r.link}"%>></input>
  <button type="submit" style="display:inline-block; float:right; font-size: 11px">Add recipe to my cookbook</button>
</form><br>
<p style="background-color:#eeeeee;  padding: 5px 5px;"><%= "#{r.description_long}" %></p>
<% end %>
